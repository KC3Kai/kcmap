#!/bin/bash

babel kcmap.es > kcmap.js

for w in 01_01 01_02 01_03 01_04 01_05 01_06 01_07 02_01 02_02 02_03 02_04 02_05 02_06 02_07 03_01 03_02 03_03 03_04 03_05 03_06 03_07 04_01 04_02 04_03 04_04 04_05 04_06 04_07 05_01 05_02 05_03 05_04 05_05 05_06 05_07 06_01 06_02 06_03 06_04 06_05 06_06 06_07 33_01 33_02 33_03 33_04 33_05 33_06 33_07 34_01 34_02 34_03 34_04 34_05 34_06 34_07 35_01 35_02 35_03 35_04 35_05 35_06 35_07 36_01 36_02 36_03 36_04 36_05 36_06 36_07; do
    if [[ -f "source/$w.xml" ]] && [[ -f "source/$w.json" ]]; then
        echo ">>> $w"
        cp "source/$w.xml" swf.xml
        cp "source/$w.json" spots.json
        node kcmap.js
        mv draw.svg "built/$w.svg"
    fi
done
